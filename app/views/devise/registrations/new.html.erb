<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true, :required => true %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>
  <div class="control-group integer required"><label for="user_department_id" class="integer required control-label"><abbr title="required">*</abbr> Department</label><div class="controls">
      <select name="user[department_id]" id="user_department_id" class="numeric integer required">
        <option value=""></option>
        <% unless Department.all.blank? %>
          <% Department.all.each do |department| %>
            <option value="<%= department.id %>"><%=  department.name  %></option>
          <% end %>
        <% end %>
      </select>
    </div></div>
  <%= f.input :employee_id,  :label=>"Employee Id", :required => true %>









  <%= f.input :designation, :required => true %>


  <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
